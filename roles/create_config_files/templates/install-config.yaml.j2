apiVersion: v1
baseDomain: "{{ base_domain }}"
compute:
  - name: worker
    replicas: {{ worker_nodes }}
controlPlane:
  name: master
  replicas: {{ controlplane_nodes }}
metadata:
  name: "{{ cluster_name }}"
networking:
  clusterNetwork:
    - cidr: "{{ cluster_network_cidr }}"
      hostPrefix: 23
  machineNetwork:
    - cidr: "{{ machine_network_cidr }}"
  networkType: OVNKubernetes
  serviceNetwork:
    - "{{ service_network_cidr }}"
platform:
  baremetal:
    apiVIPs:
      - "{{ api_vip }}"
    ingressVIPs:
      - "{{ ingress_vip }}"
fips: false
pullSecret: "{{ pull_secret_content | regex_replace('[\\r\\n\\t]+','') }}"
sshKey: "{{ ssh_public_key }}"